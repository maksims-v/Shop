{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 71,
      "minLength": 3
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tshirt",
        "mug",
        "hoodie",
        "heat"
      ],
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "availableQty": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "new": {
      "type": "boolean",
      "default": false
    },
    "sale": {
      "type": "boolean",
      "default": false
    },
    "salePrice": {
      "type": "integer"
    },
    "attributes": {
      "type": "json",
      "required": false
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::variation.variation",
      "inversedBy": "variation"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
