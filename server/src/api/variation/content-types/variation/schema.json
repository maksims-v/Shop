{
  "kind": "collectionType",
  "collectionName": "variations",
  "info": {
    "singularName": "variation",
    "pluralName": "variations",
    "displayName": "Variation",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categoty": {
      "type": "enumeration",
      "enum": [
        "tshirt",
        "polo"
      ],
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "availableQty": {
      "type": "integer",
      "required": true
    },
    "new": {
      "type": "boolean",
      "required": true
    },
    "sale": {
      "type": "boolean",
      "required": true
    },
    "salePrice": {
      "type": "decimal"
    },
    "variation": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "product"
    }
  }
}
